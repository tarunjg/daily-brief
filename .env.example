# ─── Authentication ───
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-random-secret-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ─── Database (Supabase) ───
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# ─── AI / LLM ───
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...

# ─── Transcription ───
DEEPGRAM_API_KEY=your-deepgram-api-key

# ─── Text-to-Speech (ElevenLabs) ───
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-custom-voice-id  # Optional: defaults to Sarah
ELEVENLABS_MODEL_ID=eleven_multilingual_v2  # Optional: or eleven_turbo_v2_5 for faster

# ─── Email ───
RESEND_API_KEY=re_...
EMAIL_FROM=brief@yourdomain.com

# ─── Google Cloud Storage (Audio) ───
GCS_BUCKET_NAME=daily-brief-audio
GCS_PROJECT_ID=your-gcp-project-id
GCS_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GCS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ─── App Config ───
APP_URL=http://localhost:3000
